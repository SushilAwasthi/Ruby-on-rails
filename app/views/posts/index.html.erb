<%= stylesheet_link_tag'index.css'%>
<div class="container">
<h1>All Posts</h1>
<p>This blog has <%= Post.public_count %> posts </p>
<div class="box">
<ul>
<% @posts.each do |post|%>
<% unless post.archived?%>
  <h3><%= link_to post.title, post %></h3>
<%end%>
<% end %>
</ul>
</div><br>
<% if user_signed_in?%>
<p>Welcome, <%= current_user.email %>!</p>
<p><%= link_to 'Create Posts', "posts/new",class:"btn btn-success" %></p>

  <div>
  <%= link_to 'Sign Out',destroy_user_session_path ,method: :delete ,class:"btn btn-danger"%>
  </div><br>
   <div>
  <%= link_to 'Edit',edit_user_registration_path,class:"btn btn-primary" %>
  </div>
<% else %>
  <div>
  <%= link_to 'Sign Up',new_user_registration_path ,class:"btn btn-success"%>
  </div><br>
  <div>
  <%= link_to 'Sign In',new_user_session_path,class:"btn btn-success" %>
  </div><br>
  </div>
  <% end %>