<%= stylesheet_link_tag 'new.css'%>
<%= form_with model: post do |form| %>
  <div>
    <%= form.label :title ,class:"form-label"%><br>
    <%= form.text_field :title ,class:"form-control"%>
    <% post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="align-items-center">
    <%= form.label :description ,class:"form-label"%><br>
    <%= form.text_area :description ,class:"form-control"%><br>
    <% post.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.number_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:"btn btn-success"%>
  </div>
  <div><br>
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, selected: post.status || 'public' %>
  </div>
<% end %>
